	@import 'jeet'
@import 'nib'
@import url(http://fonts.googleapis.com/css?family=Dosis:200,300,400,500,600,700,800);
@import url(/css/janus.css)

mobile = 600px

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

// edit()
global-reset()
*
	box-sizing border-box
main_color = #F4F3F3
content_font = 'Dosis', sans-serif
head_color = #B56464


body
  center(800px)
  background(main_color)
  font-family content_font
  +below(600px)
  	// background red#E75A4D

ul
	// font-family Helvetica, Arial, sans-serif

header
	padding 2rem 0
	margin-bottom 6rem
	overflow hidden

.right_wrap
	text-align right
	width 80%
	float right

.global_head
	font-size 3rem
	color #B56464
	padding 1rem 0
	padding-top 0

a
	text-decoration none

.list_items
			padding-left 2rem
			margin-top 1.3rem
			display inline-block
	
.post_list li
	cf()
	padding 2rem 0
	// border-bottom 1px solid #AB7E7E
	&:last-child
		border-bottom none

.meta_trio
	col(1/5, gutter:0)
	text-transform: uppercase;
		
.post_title
	font-size 1.2rem
	transition .4s all
	color #B2ACAC
	font-weight 600
	// text-shadow 1px 1px 4px #5C5D5E
	&:hover
		color #353535
		// font-size 1.3rem
		letter-spacing .1rem


.post_header
	color #353535
	letter-spacing .1rem
	font-size 2rem
	padding: 2rem 0
	width 26%
	
.blogpost_wrap
	padding 1rem 0	
	clearfix()
	
.post_category
    font-size: 1rem;
    font-style: italic;
	
.post_date
	display inline-block
	
.blogpost_date
	display inline-block
	
.post_content
	font-size 1rem
	color #5E5E5E
	col(3.4/5, gutter: 0)
	text-align justify
	line-height 2rem
	
.post_content_preview
	col(4/5, gutter: 0)
	line-height 1.5rem
	text-align justify
	text-overflow ellipsis
	display -webkit-box
	-webkit-line-clamp 7
	-webkit-box-orient vertical
	overflow hidden

.post_content_preview::first-line
		line-height 0rem
		color red
	
.post_title_h3
	padding 2rem 0rem	 

.footer
	border-top 1px solid #AB7E7E
	padding 3.5rem 0
	color #B56464
	font-weight 900
	text-align center
	margin-top 6rem
	
h4
	margin 2rem 0		

// the J logo

.logo
	height 120px
	max-width 20%
	float left
	border-radius 80px
nav

li
	// display inline-block
	
a
	color #B56464
	letter-spacing 1px
		
figure
	max-height 400px
	overflow hidden
	margin-bottom 2rem
	
.edit_delete_wrap
	col(.5/5, gutter: 0)
	float right
	a
		float right
		text-align right
		// border-bottom 1px solid #999
		&:hover
			// border-bottom 1px solid #333
			
.icon-pencil:before,
.icon-trash-empty:before
	font-family janus
	font-size 1.5	rem
	content \e800
				
			
.deletebutton
	margin 1rem 0
	
.about_box
	padding 4rem 0
	line-height 2rem

.cc_logo
	fill #B56464

[class^="icon-"]:before,
[class*=" icon-"]:before
  font-family "janus"
  font-style normal
  font-weight normal
  speak none
  display inline-block
  text-decoration inherit
  width 1em
  margin-right .2em
  text-align center
  font-variant normal
  text-transform none
  line-height 1em
  margin-left .2em



.icon-twitter:before,
.icon-mail:before,
.icon-github-circled:before	
	font-family janus
	font-size 3rem
	content \e800

.icon-github-circled
	color #333
.icon-twitter
	color #55acee
.icon-mail
	color #E75A4D	
	


hr
	width 0px
	color #fff

.social_wrap
	// margin-bottom 1rem
	
.user_input
	font-size 1.5rem
	border none
	padding .8rem 1.5rem
	width 100%
	margin-bottom .1rem

.user_input_content
	width 100%
	height 300px
	font 1rem Dosis
	padding .8rem 1.5rem
	border none

.submit_button
	width 100%
	padding 1rem 3rem
	border none
	background-color head_color
	color #fff
	&:hover
		cursor pointer

.edit_head
	font-size 2.5rem
	padding-bottom 2rem	